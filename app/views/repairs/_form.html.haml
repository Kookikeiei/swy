= form_for @repair do |f|
  - if @repair.errors.any?
    #error_explanation
      %h2= "#{pluralize(@repair.errors.count, "error")} prohibited this repair from being saved:"
      %ul
        - @repair.errors.full_messages.each do |msg|
          %li= msg

  .field
    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
    = f.hidden_field :room_no ,:value => @room.room_no
  .field
    %br
    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
    = f.hidden_field :name , :value => @room.name
  .field
    %br 
    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
    = f.text_area :problem , :id => 'Problem'
  .actions
    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
    = f.submit 'Post Problem'
